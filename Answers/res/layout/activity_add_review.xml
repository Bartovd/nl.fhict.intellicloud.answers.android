<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:padding="@dimen/activity_horizontal_margin">        
    
    <TextView
        android:id="@+id/tvQuestion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:textSize="18dp"
        android:textStyle="bold"
        android:text="@string/question"/>
    
    <TextView
        android:id="@+id/tvQuestionDetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12dp"
        android:text="@string/question"/>
        
    <TextView
        android:id="@+id/tvAnswerHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/answerHeader"
        android:layout_marginTop="20dp"/>
    <View
        android:id="@+id/vUnderAnswerHeader" 
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:background="@color/slidingmenu_devider_color"/>
        
    <TextView
        android:id="@+id/tvAnswer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/answer"
        android:layout_marginTop="5dp"
         android:textSize="12dp"/>
        
    <TextView
        android:id="@+id/tvReviewHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/reviewHeader"
        android:layout_marginTop="20dp"/>
        
    <EditText
        android:id="@+id/etReviewField"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="5" />
        
    <Button
	        android:id="@+id/btnSendReview"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="@string/sendReview"
	        android:layout_gravity="center_horizontal"
	        android:layout_marginTop="1dp"
	        android:paddingLeft="5dp"
	        android:paddingRight="5dp"/>
        
</LinearLayout>
